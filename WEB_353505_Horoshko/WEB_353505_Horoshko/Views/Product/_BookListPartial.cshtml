@model ListModel<Book>

<div class="row">
    @for (int i = 0; i < Model.Items.Count(); i += 3)
    {
        <div class="row mb-4">
            @for (int j = i; j < i + 3 && j < Model.Items.Count(); j++)
            {
                var book = Model.Items.ElementAt(j);
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <img src="@book.Image" class="card-img-top" alt="@book.Name" style="height: 400px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@book.Name</h5>
                            <p class="card-text flex-grow-1">@book.Description</p>
                            <h5 class="card-title">@book.Price.ToString("C")</h5>
                        </div>
                        <div class="card-footer text-center">
                            <form asp-controller="Cart" asp-action="Add" method="post">
                                <input type="hidden" name="id" value="@book.Id" />
                                <input type="hidden" name="returnUrl" value="@Url.Action("Index", "Product", new { category = ViewData["currentCategoryNormalized"] })" />
                                <button type="submit" class="btn btn-primary">
                                    Добавить в корзину
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (Model.TotalPages > 1)
{
    <Pager current-page="@Model.CurrentPage"
           total-pages="@Model.TotalPages"
           category="@(ViewData["currentCategoryNormalized"]?.ToString())">
    </Pager>
}
