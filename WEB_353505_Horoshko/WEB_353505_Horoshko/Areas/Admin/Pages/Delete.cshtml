@page
@model WEB_353505_Horoshko.Areas.Admin.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Book.Image"
                 class="card-img-top"
                 alt="@Model.Book.Name"
                 style="height: 400px; width: auto; object-fit: cover;">
        </dd>
    </dl>
    
    <form method="post" class="mb-3">
        <input type="hidden" asp-for="Book.Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>

</div>
